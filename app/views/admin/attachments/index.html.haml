  .btn-toolbar.mb-2.mb-md-0
    .btn-group.mr-2
      = link_to 'New Attachment', new_admin_attachment_path, class: 'btn btn-sm btn-outline-secondary'
      %button.btn.btn-sm.btn-outline-secondary Share
      %button.btn.btn-sm.btn-outline-secondary Export
    %button.btn.btn-sm.btn-outline-secondary.dropdown-toggle
      %svg.feather.feather-calendar{:fill => "none", :height => "24", :stroke => "currentColor", "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2", :viewbox => "0 0 24 24", :width => "24", :xmlns => "http://www.w3.org/2000/svg"}
