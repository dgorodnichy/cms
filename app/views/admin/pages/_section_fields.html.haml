- id = SecureRandom.hex(3)

.nested-fields
  .card
    .card-header
      Header
      .float-right
        %a{href: '#'}
          %i.fas.fa-sort
        = link_to_remove_association f do
          %i.fas.fa-trash-alt.pl-2

    .card-body
      .form-group
        = f.label 'Content', for: :content
        = f.hidden_field :content, class: 'form-control content-field', id: id
        %trix-editor{ input: id }
  %br
